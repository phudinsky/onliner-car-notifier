{
  "manifest_version": 2,
  "name": "New car notifier",
  "description": "This extension notify when new car is created on ab.onliner.by",
  "version": "0.1",
  "browser_action": {
    "default_icon": "car.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "notifications",
    "alarms",
    "storage",
    "http://ab.onliner.by/",
    "https://content.onliner.by/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}